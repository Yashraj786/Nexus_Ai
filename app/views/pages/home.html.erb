<div class="ml-72 flex items-center justify-center min-h-screen">
  <div class="text-center">
    <h1 class="text-5xl font-bold mb-6">
      <span class="text-white">WELCOME TO</span>
      <span class="text-accent"> NEXUS AI</span>
    </h1>
    <p class="text-gray-400 mb-8">Your context-aware, multi-persona AI workspace</p>
    <div class="flex gap-4 justify-center">
      <% if user_signed_in? %>
        <%= link_to "Start New Session", new_chat_session_path, class: "btn-primary px-8 py-3" %>
        <%= link_to "My Sessions", chat_sessions_path, class: "text-accent hover:text-white transition" %>
      <% else %>
        <%= link_to "Get Started", new_user_registration_path, class: "btn-primary px-8 py-3" %>
        <%= link_to "Sign In", new_user_session_path, class: "text-accent hover:text-white transition" %>
      <% end %>
    </div>
  </div>
</div>
