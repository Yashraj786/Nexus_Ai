<!-- app/views/pages/nexus.html.erb -->
<div class="min-h-screen bg-white flex flex-col">
  <!-- Hero Section - Minimalist -->
  <div class="flex-1 flex flex-col items-center justify-center px-6 py-20">
    <div class="space-y-6 max-w-3xl">
      <h1 class="text-6xl md:text-7xl font-bold text-neutral-900 leading-tight">
        Nexus AI
      </h1>
      
      <p class="text-xl text-neutral-600 leading-relaxed max-w-2xl">
        Unified access to all major LLM providers. One interface. Complete control.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-3 pt-8">
        <% if user_signed_in? %>
          <%= link_to "New Session", new_chat_session_path, class: "px-6 py-3 bg-black text-white rounded-lg hover:bg-neutral-800 transition-colors font-medium" %>
          <%= link_to "My Sessions", chat_sessions_path, class: "px-6 py-3 border border-neutral-300 text-neutral-900 rounded-lg hover:border-neutral-400 transition-colors font-medium" %>
        <% else %>
          <%= link_to "Get Started", new_user_registration_path, class: "px-6 py-3 bg-black text-white rounded-lg hover:bg-neutral-800 transition-colors font-medium" %>
          <%= link_to "Sign In", new_user_session_path, class: "px-6 py-3 border border-neutral-300 text-neutral-900 rounded-lg hover:border-neutral-400 transition-colors font-medium" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="border-t border-neutral-200 px-6 py-24 bg-neutral-50">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-neutral-900 mb-16">Features</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="zap" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Multi-Provider</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">OpenAI, Anthropic, Google Gemini, Ollama, and more.</p>
        </div>

        <!-- Feature 2 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="shield" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Automatic Failover</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Fallback providers ensure uninterrupted access.</p>
        </div>

        <!-- Feature 3 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="bar-chart-2" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Usage Analytics</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Monitor costs, usage, and performance metrics.</p>
        </div>

        <!-- Feature 4 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="lock" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Secure & Private</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Encrypted API keys. Direct provider integration.</p>
        </div>

        <!-- Feature 5 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="users" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Custom Personas</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Specialized AI assistants for any task.</p>
        </div>

        <!-- Feature 6 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="trending-up" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Rate Protection</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Built-in rate limiting and abuse protection.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="px-6 py-24 bg-white border-t border-neutral-200">
    <div class="max-w-2xl mx-auto text-center space-y-6">
      <h2 class="text-4xl font-bold text-neutral-900">Ready to get started?</h2>
      <p class="text-lg text-neutral-600">Configure your LLM providers and start building in minutes.</p>
      
      <div class="flex flex-col sm:flex-row gap-3 justify-center pt-4">
        <% if user_signed_in? %>
          <%= link_to "Start Chatting", new_chat_session_path, class: "px-8 py-3 bg-black text-white rounded-lg hover:bg-neutral-800 transition-colors font-medium" %>
        <% else %>
          <%= link_to "Create Free Account", new_user_registration_path, class: "px-8 py-3 bg-black text-white rounded-lg hover:bg-neutral-800 transition-colors font-medium" %>
          <%= link_to "Learn More", "#", class: "px-8 py-3 border border-neutral-300 text-neutral-900 rounded-lg hover:border-neutral-400 transition-colors font-medium" %>
        <% end %>
      </div>
    </div>
  </div>
</div>