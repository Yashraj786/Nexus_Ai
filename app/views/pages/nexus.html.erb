<!-- app/views/pages/nexus.html.erb -->
<div class="min-h-screen bg-white flex flex-col">
  <!-- Hero Section -->
  <div class="flex-1 flex flex-col items-center justify-center px-6 sm:px-8 py-20 sm:py-32">
    <div class="space-y-8 max-w-2xl text-center">
      <!-- Pre-heading badge -->
      <div class="inline-flex items-center gap-2 px-3.5 py-1.5 bg-neutral-100 rounded-full border border-neutral-200">
        <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
        <span class="text-xs font-medium text-neutral-700">Powered by multiple LLM providers</span>
      </div>

      <!-- Main heading -->
      <div class="space-y-4">
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-neutral-950 tracking-tight leading-tight">
          Your unified AI platform
        </h1>
        
        <p class="text-lg sm:text-xl text-neutral-600 leading-relaxed max-w-xl mx-auto">
          Access OpenAI, Anthropic, Google Gemini, and more from a single interface. No vendor lock-in.
        </p>
      </div>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 pt-4 justify-center">
        <% if user_signed_in? %>
          <%= link_to "Start Chatting", new_chat_session_path, class: "px-6 py-2.5 bg-black text-white rounded-lg hover:bg-neutral-800 active:scale-95 transition-all duration-150 font-medium text-sm sm:text-base" %>
          <%= link_to "View Sessions", chat_sessions_path, class: "px-6 py-2.5 border border-neutral-300 text-neutral-900 rounded-lg hover:bg-neutral-50 transition-colors font-medium text-sm sm:text-base" %>
        <% else %>
          <%= link_to "Get Started Free", new_user_registration_path, class: "px-6 py-2.5 bg-black text-white rounded-lg hover:bg-neutral-800 active:scale-95 transition-all duration-150 font-medium text-sm sm:text-base" %>
          <%= link_to "Sign In", new_user_session_path, class: "px-6 py-2.5 border border-neutral-300 text-neutral-900 rounded-lg hover:bg-neutral-50 transition-colors font-medium text-sm sm:text-base" %>
        <% end %>
      </div>

      <!-- Trust badge -->
      <p class="text-xs text-neutral-600 pt-4">No credit card required â€¢ Takes 30 seconds</p>
    </div>
  </div>

  <!-- Features Section -->
  <div class="border-t border-neutral-200 px-6 sm:px-8 py-24 sm:py-32 bg-neutral-50">
    <div class="max-w-6xl mx-auto">
      <div class="mb-16 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-neutral-950 mb-4">Everything you need</h2>
        <p class="text-neutral-600 max-w-2xl mx-auto">Powerful features to manage multiple AI providers in one place</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="zap" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Multi-Provider</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">OpenAI, Anthropic, Google Gemini, Ollama, and more.</p>
        </div>

        <!-- Feature 2 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="shield" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Automatic Failover</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Fallback providers ensure uninterrupted access.</p>
        </div>

        <!-- Feature 3 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="bar-chart-2" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Usage Analytics</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Monitor costs, usage, and performance metrics.</p>
        </div>

        <!-- Feature 4 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="lock" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Secure & Private</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Encrypted API keys. Direct provider integration.</p>
        </div>

        <!-- Feature 5 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="users" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Custom Personas</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Specialized AI assistants for any task.</p>
        </div>

        <!-- Feature 6 -->
        <div class="space-y-3">
          <div class="w-10 h-10 bg-neutral-200 rounded-lg flex items-center justify-center">
            <i data-lucide="trending-up" class="w-5 h-5 text-neutral-700"></i>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">Rate Protection</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">Built-in rate limiting and abuse protection.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="px-6 sm:px-8 py-24 sm:py-32 bg-white border-t border-neutral-200">
    <div class="max-w-2xl mx-auto text-center space-y-8">
      <div class="space-y-4">
        <h2 class="text-4xl sm:text-5xl font-bold text-neutral-950">Ready to begin?</h2>
        <p class="text-lg text-neutral-600">Start using multi-model AI in minutes. No setup required.</p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-3 justify-center pt-4">
        <% if user_signed_in? %>
          <%= link_to "Open Dashboard", new_chat_session_path, class: "px-6 py-2.5 bg-black text-white rounded-lg hover:bg-neutral-800 active:scale-95 transition-all duration-150 font-medium text-sm sm:text-base" %>
        <% else %>
          <%= link_to "Create Free Account", new_user_registration_path, class: "px-6 py-2.5 bg-black text-white rounded-lg hover:bg-neutral-800 active:scale-95 transition-all duration-150 font-medium text-sm sm:text-base" %>
          <%= link_to "View Docs", "#", class: "px-6 py-2.5 border border-neutral-300 text-neutral-900 rounded-lg hover:bg-neutral-50 transition-colors font-medium text-sm sm:text-base" %>
        <% end %>
      </div>
    </div>
  </div>
</div>