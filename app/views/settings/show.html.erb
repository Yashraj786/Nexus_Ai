<div class="min-h-screen bg-white">
  <div class="max-w-4xl mx-auto px-6 py-12">
    <!-- Header -->
    <div class="mb-12">
      <div class="flex items-center justify-between mb-2">
        <h1 class="text-4xl font-bold font-rajdhani tracking-wider">SETTINGS</h1>
        <%= link_to root_path, class: "btn btn-outline" do %>
          <i data-lucide="arrow-left" class="w-4 h-4"></i>
          Back
        <% end %>
      </div>
      <p class="text-gray-600">Configure your AI providers and manage your account</p>
    </div>

    <!-- Primary API Configuration -->
    <div class="card mb-8">
      <div class="card-body space-y-6">
        <div>
          <h2 class="text-2xl font-bold font-rajdhani mb-2">Primary Provider</h2>
          <p class="text-gray-600 text-sm">Your main LLM provider for all conversations</p>
        </div>

        <% if @api_configured %>
          <div class="alert alert-success">
            <i data-lucide="check-circle" class="w-5 h-5 text-green-600"></i>
            <div>
              <h3 class="font-bold text-green-900">Active Configuration</h3>
              <div class="text-sm text-green-800 space-y-1 mt-2">
                <p><strong>Provider:</strong> <span class="badge badge-primary"><%= @user.api_provider.upcase %></span></p>
                <p><strong>Model:</strong> <%= @user.api_model_name %></p>
                <p><strong>Configured:</strong> <%= @user.api_configured_at.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          </div>
        <% else %>
          <div class="alert alert-warning">
            <i data-lucide="alert-circle" class="w-5 h-5 text-amber-600"></i>
            <div>
              <h3 class="font-bold text-amber-900">No Configuration</h3>
              <p class="text-sm text-amber-800 mt-1">Configure an API provider to start using Nexus AI</p>
            </div>
          </div>
        <% end %>

        <form action="<%= settings_update_api_key_path %>" method="POST" class="space-y-4">
          <input type="hidden" name="_method" value="PATCH">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">API Provider <span class="text-red-600">*</span></span>
            </label>
            <select name="user[api_provider]" class="input input-bordered" required>
              <option value="">-- Select Provider --</option>
              <option value="openai" <%= 'selected' if @user.api_provider == 'openai' %>>OpenAI (GPT-4, GPT-3.5)</option>
              <option value="anthropic" <%= 'selected' if @user.api_provider == 'anthropic' %>>Anthropic (Claude)</option>
              <option value="gemini" <%= 'selected' if @user.api_provider == 'gemini' %>>Google Gemini</option>
              <option value="ollama" <%= 'selected' if @user.api_provider == 'ollama' %>>Ollama (Local)</option>
              <option value="custom" <%= 'selected' if @user.api_provider == 'custom' %>>Custom API</option>
            </select>
            <label class="label">
              <span class="label-text-alt">Choose your preferred LLM provider</span>
            </label>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">Model Name <span class="text-red-600">*</span></span>
            </label>
            <input type="text" name="user[api_model_name]" placeholder="e.g., gpt-4, claude-3-opus-20240229, gemini-1.5-flash" 
              value="<%= @user.api_model_name %>" class="input input-bordered" required />
            <label class="label">
              <span class="label-text-alt">The specific model variant to use</span>
            </label>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">API Key <span class="text-red-600">*</span></span>
            </label>
            <input type="password" name="user[encrypted_api_key]" placeholder="Your API key (leave blank to keep current)" 
              class="input input-bordered" />
            <label class="label">
              <span class="label-text-alt">Keys are encrypted and never logged</span>
            </label>
          </div>

          <div class="flex gap-3 pt-2">
            <button type="submit" class="btn btn-primary">
              <i data-lucide="save" class="w-4 h-4"></i>
              Save Configuration
            </button>
            <button type="button" class="btn btn-secondary" onclick="testConnection(event)">
              <i data-lucide="zap" class="w-4 h-4"></i>
              Test Connection
            </button>
            <% if @api_configured %>
              <%= button_to settings_clear_api_key_path, method: :delete, class: "btn btn-error", 
                data: { confirm: "This will disable your API configuration. Continue?" } do %>
                <i data-lucide="trash-2" class="w-4 h-4"></i>
                Clear
              <% end %>
            <% end %>
          </div>
        </form>

        <!-- Setup Guides -->
        <div class="bg-gray-50 rounded-lg p-4 space-y-3">
          <h4 class="font-bold text-sm uppercase tracking-wide">Provider Setup Guides</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm">
            <a href="https://platform.openai.com/account/api-keys" target="_blank" class="flex items-center gap-2 p-2 hover:bg-white rounded transition-colors">
              <i data-lucide="external-link" class="w-3 h-3 text-orange-600"></i>
              <span>OpenAI API Keys</span>
            </a>
            <a href="https://console.anthropic.com/" target="_blank" class="flex items-center gap-2 p-2 hover:bg-white rounded transition-colors">
              <i data-lucide="external-link" class="w-3 h-3 text-orange-600"></i>
              <span>Anthropic Console</span>
            </a>
            <a href="https://aistudio.google.com/app/apikey" target="_blank" class="flex items-center gap-2 p-2 hover:bg-white rounded transition-colors">
              <i data-lucide="external-link" class="w-3 h-3 text-orange-600"></i>
              <span>Google AI Studio</span>
            </a>
            <a href="https://ollama.ai" target="_blank" class="flex items-center gap-2 p-2 hover:bg-white rounded transition-colors">
              <i data-lucide="external-link" class="w-3 h-3 text-orange-600"></i>
              <span>Ollama Setup</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Fallback Provider -->
    <div class="card mb-8">
      <div class="card-body space-y-6">
        <div>
          <h2 class="text-2xl font-bold font-rajdhani mb-2">Fallback Provider</h2>
          <p class="text-gray-600 text-sm">Automatic failover when primary provider fails</p>
        </div>

        <% if @fallback_configured %>
          <div class="alert alert-success">
            <i data-lucide="shield-check" class="w-5 h-5 text-green-600"></i>
            <div>
              <h3 class="font-bold text-green-900">Fallback Active</h3>
              <div class="text-sm text-green-800 mt-2">
                <p><strong>Provider:</strong> <span class="badge badge-primary"><%= @user.fallback_provider.upcase %></span></p>
                <p><strong>Model:</strong> <%= @user.fallback_model_name %></p>
              </div>
            </div>
          </div>
        <% else %>
          <div class="alert alert-info">
            <i data-lucide="info" class="w-5 h-5 text-blue-600"></i>
            <div>
              <h3 class="font-bold text-blue-900">Optional</h3>
              <p class="text-sm text-blue-800 mt-1">Configure a backup provider for redundancy and reliability</p>
            </div>
          </div>
        <% end %>

        <form action="<%= settings_update_fallback_provider_path %>" method="POST" class="space-y-4">
          <input type="hidden" name="_method" value="PATCH">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">Fallback Provider</span>
            </label>
            <select name="user[fallback_provider]" class="input input-bordered">
              <option value="">-- None (Disabled) --</option>
              <option value="openai" <%= 'selected' if @user.fallback_provider == 'openai' %>>OpenAI</option>
              <option value="anthropic" <%= 'selected' if @user.fallback_provider == 'anthropic' %>>Anthropic</option>
              <option value="gemini" <%= 'selected' if @user.fallback_provider == 'gemini' %>>Google Gemini</option>
              <option value="ollama" <%= 'selected' if @user.fallback_provider == 'ollama' %>>Ollama</option>
              <option value="custom" <%= 'selected' if @user.fallback_provider == 'custom' %>>Custom API</option>
            </select>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">Fallback Model</span>
            </label>
            <input type="text" name="user[fallback_model_name]" placeholder="e.g., gpt-3.5-turbo" 
              value="<%= @user.fallback_model_name %>" class="input input-bordered" />
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">Fallback API Key</span>
            </label>
            <input type="password" name="user[encrypted_fallback_api_key]" placeholder="Leave blank to keep current" 
              class="input input-bordered" />
          </div>

          <div class="flex gap-3 pt-2">
            <button type="submit" class="btn btn-primary">
              <i data-lucide="save" class="w-4 h-4"></i>
              Save Fallback
            </button>
            <% if @fallback_configured %>
              <%= button_to settings_clear_fallback_provider_path, method: :delete, class: "btn btn-error",
                data: { confirm: "Remove fallback provider?" } do %>
                <i data-lucide="trash-2" class="w-4 h-4"></i>
                Clear Fallback
              <% end %>
            <% end %>
          </div>
        </form>
      </div>
    </div>

    <!-- API Usage Dashboard -->
    <div class="card mb-8">
      <div class="card-body space-y-6">
        <h2 class="text-2xl font-bold font-rajdhani">Usage Analytics</h2>

        <% if @usage_stats[:total_requests] > 0 %>
          <!-- Statistics Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="stat">
              <div class="stat-title">Total Requests</div>
              <div class="stat-value text-3xl text-orange-600"><%= @usage_stats[:total_requests] %></div>
            </div>
            <div class="stat">
              <div class="stat-title">Success Rate</div>
              <div class="stat-value text-3xl text-green-600"><%= @usage_stats[:success_rate] %>%</div>
            </div>
            <div class="stat">
              <div class="stat-title">Total Tokens</div>
              <div class="stat-value text-3xl text-blue-600"><%= number_with_delimiter(@usage_stats[:total_tokens_used]) %></div>
            </div>
            <div class="stat">
              <div class="stat-title">Today</div>
              <div class="stat-value text-3xl text-purple-600"><%= @today_stats[:requests_today] %></div>
            </div>
          </div>

          <!-- Recent API Calls -->
          <div>
            <h3 class="font-bold mb-3">Recent Calls (Last 10)</h3>
            <div class="overflow-x-auto">
              <table class="table">
                <thead>
                  <tr>
                    <th>Provider</th>
                    <th>Model</th>
                    <th>Status</th>
                    <th>Tokens</th>
                    <th>Time</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_logs.each do |log| %>
                    <tr>
                      <td><span class="badge badge-primary"><%= log.provider.upcase %></span></td>
                      <td><code class="text-xs"><%= log.model %></code></td>
                      <td>
                        <% case log.status %>
                        <% when 'success' %>
                          <span class="badge badge-success">Success</span>
                        <% when 'rate_limited' %>
                          <span class="badge badge-warning">Rate Limited</span>
                        <% else %>
                          <span class="badge badge-error"><%= log.status.titleize %></span>
                        <% end %>
                      </td>
                      <td><%= log.total_tokens || '—' %></td>
                      <td class="text-sm text-gray-600"><%= time_ago_in_words(log.created_at) %> ago</td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        <% else %>
          <div class="alert alert-info">
            <i data-lucide="bar-chart-2" class="w-5 h-5"></i>
            <div>
              <h3 class="font-bold">No Usage Data Yet</h3>
              <p class="text-sm mt-1">Start chatting to see your API usage statistics</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Rate Limits -->
    <div class="card">
      <div class="card-body space-y-6">
        <h2 class="text-2xl font-bold font-rajdhani">Rate Limits</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Per Minute -->
          <div class="space-y-3">
            <h3 class="font-bold text-sm">Per Minute</h3>
            <div class="space-y-2">
              <div class="progress">
                <div class="progress-bar" style="width: <%= (@rate_limits[:minute][:used].to_f / @rate_limits[:minute][:limit] * 100).to_i %>%"></div>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600"><%= @rate_limits[:minute][:used] %> / <%= @rate_limits[:minute][:limit] %></span>
                <span class="text-green-600 font-bold"><%= @rate_limits[:minute][:remaining] %> left</span>
              </div>
            </div>
          </div>

          <!-- Per Hour -->
          <div class="space-y-3">
            <h3 class="font-bold text-sm">Per Hour</h3>
            <div class="space-y-2">
              <div class="progress">
                <div class="progress-bar" style="width: <%= (@rate_limits[:hour][:used].to_f / @rate_limits[:hour][:limit] * 100).to_i %>%"></div>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600"><%= @rate_limits[:hour][:used] %> / <%= @rate_limits[:hour][:limit] %></span>
                <span class="text-green-600 font-bold"><%= @rate_limits[:hour][:remaining] %> left</span>
              </div>
            </div>
          </div>

          <!-- Per Day -->
          <div class="space-y-3">
            <h3 class="font-bold text-sm">Per Day</h3>
            <div class="space-y-2">
              <div class="progress">
                <div class="progress-bar" style="width: <%= (@rate_limits[:day][:used].to_f / @rate_limits[:day][:limit] * 100).to_i %>%"></div>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600"><%= @rate_limits[:day][:used] %> / <%= @rate_limits[:day][:limit] %></span>
                <span class="text-green-600 font-bold"><%= @rate_limits[:day][:remaining] %> left</span>
              </div>
            </div>
          </div>
        </div>

        <div class="alert alert-info">
          <i data-lucide="info" class="w-5 h-5"></i>
          <div>
            <h3 class="font-bold">Rate Limiting</h3>
            <p class="text-sm mt-1">Soft limits protect your account. Your LLM provider may have additional limits.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
async function testConnection(event) {
  event.preventDefault();
  
  const btn = event.target;
  const originalText = btn.innerHTML;
  btn.disabled = true;
  btn.innerHTML = '<i data-lucide="loader" class="w-4 h-4 animate-spin"></i>Testing...';
  
  try {
    const response = await fetch('<%= settings_test_api_path %>', {
      method: 'POST',
      headers: {
        'X-CSRF-Token': document.querySelector('input[name="authenticity_token"]').value,
        'Accept': 'application/json'
      }
    });
    
    const data = await response.json();
    
    if (data.success) {
      alert('✅ Connection Successful!\n\n' + data.data);
    } else {
      alert('❌ Connection Failed\n\n' + data.error);
    }
  } catch (error) {
    alert('❌ Error Testing API\n\n' + error.message);
  }
  
  btn.disabled = false;
  btn.innerHTML = originalText;
  lucide.createIcons();
}
</script>
