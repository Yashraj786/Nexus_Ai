<aside class="w-64 bg-white border-r border-neutral-200 p-4 fixed left-0 top-0 h-full flex flex-col gap-4 overflow-hidden hidden lg:flex z-40" data-controller="sidebar" data-sidebar-target="menu">
  <!-- Logo Section -->
  <div class="pb-4 border-b border-neutral-200">
    <a href="<%= root_path %>" class="flex items-center gap-3 p-2 rounded hover:bg-neutral-100 transition-colors">
      <i data-lucide="sparkles" class="w-5 h-5 text-neutral-900"></i>
      <span class="font-semibold text-neutral-900">Nexus</span>
    </a>
  </div>

  <!-- New Session Button -->
  <%= link_to new_chat_session_path, class: "w-full flex items-center justify-center gap-2 px-4 py-2 bg-black text-white rounded hover:bg-neutral-800 transition-colors font-medium text-sm" do %>
    <i data-lucide="plus" class="w-4 h-4"></i>
    <span>New Chat</span>
  <% end %>

  <!-- Recent Sessions -->
  <div class="flex-1 overflow-y-auto min-h-0">
    <h3 class="text-xs font-semibold text-neutral-500 mb-3 uppercase tracking-wider px-2">Recent</h3>
    <div class="space-y-1 px-1">
      <% current_user.chat_sessions.order(updated_at: :desc).limit(10).each do |session| %>
        <%= link_to chat_session_path(session), class: "group block p-2 rounded hover:bg-neutral-100 transition-all" do %>
          <div class="flex items-center gap-2">
            <i data-lucide="<%= session.persona&.icon || 'message-circle' %>" class="w-4 h-4 text-neutral-400 flex-shrink-0"></i>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-neutral-900 truncate font-medium group-hover:text-neutral-600">
                <%= session.title || "#{session.persona.try(:name) || 'Chat'}" %>
              </p>
              <p class="text-xs text-neutral-500">
                <%= time_ago_in_words(session.updated_at) %> ago
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

   <!-- Navigation -->
   <div class="space-y-1 border-t border-neutral-200 pt-4">
     <%= link_to root_path, class: "flex items-center gap-3 px-3 py-2 rounded text-neutral-700 hover:bg-neutral-100 transition-all font-medium text-sm", data: { action: "click->mobile-menu#close" } do %>
       <i data-lucide="home" class="w-4 h-4"></i>
       Home
     <% end %>
     
     <%= link_to chat_sessions_path, class: "flex items-center gap-3 px-3 py-2 rounded text-neutral-700 hover:bg-neutral-100 transition-all font-medium text-sm", data: { action: "click->mobile-menu#close" } do %>
       <i data-lucide="message-square" class="w-4 h-4"></i>
       Sessions
     <% end %>

      <%= link_to settings_path, class: "flex items-center gap-3 px-3 py-2 rounded text-neutral-700 hover:bg-neutral-100 transition-all font-medium text-sm", data: { action: "click->mobile-menu#close" } do %>
        <i data-lucide="settings" class="w-4 h-4"></i>
        Settings
      <% end %>
     
     <% if current_user.admin? %>
       <div class="pt-2 border-t border-neutral-200">
         <%= link_to admin_dashboard_path, class: "flex items-center gap-3 px-3 py-2 rounded text-neutral-700 hover:bg-neutral-100 transition-all font-medium text-sm", data: { action: "click->mobile-menu#close" } do %>
           <i data-lucide="shield-alert" class="w-4 h-4"></i>
           Admin
         <% end %>
         
         <%= link_to admin_feedbacks_path, class: "flex items-center gap-3 px-3 py-2 rounded text-neutral-700 hover:bg-neutral-100 transition-all font-medium text-sm", data: { action: "click->mobile-menu#close" } do %>
           <i data-lucide="message-square-warning" class="w-4 h-4"></i>
           Feedback
         <% end %>
       </div>
     <% end %>
   </div>

   <!-- User Status & Logout -->
   <div class="space-y-2 border-t border-neutral-200 pt-4">
     <div class="flex items-center gap-2 px-3 py-2">
       <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
       <span class="text-xs font-medium text-neutral-600">Online</span>
     </div>
     <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center justify-center gap-2 px-3 py-2 rounded text-neutral-700 hover:bg-neutral-100 transition-all font-medium text-sm", data: { confirm: "Are you sure?" } do %>
       <i data-lucide="log-out" class="w-4 h-4"></i>
       Logout
     <% end %>
   </div>
</aside>
