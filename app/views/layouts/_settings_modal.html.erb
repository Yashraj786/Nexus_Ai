<div id="settings-modal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-50">
  <div class="bg-gray-800 rounded-lg shadow-xl p-6 w-full max-w-md border border-gray-700">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-white">Settings</h2>
      <button id="close-settings-modal" class="text-gray-400 hover:text-white">&times;</button>
    </div>

    <div>
      <h3 class="text-lg font-medium text-white mb-2">Theme Presets</h3>
      <div class="grid grid-cols-2 gap-4">
        <button class="theme-btn p-3 rounded-lg text-white" data-theme="cyber_midnight">Cyber Midnight</button>
        <button class="theme-btn p-3 rounded-lg text-white" data-theme="amoled">Amoled</button>
        <button class="theme-btn p-3 rounded-lg text-white" data-theme="nord">Nord</button>
        <button class="theme-btn p-3 rounded-lg text-white" data-theme="solarized">Solarized</button>
        <button class="theme-btn p-3 rounded-lg text-black" data-theme="light">Light</button>
      </div>
    </div>
  </div>
</div>
