<div class="min-h-screen flex items-center justify-center px-4 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">
  <!-- Decorative Background Elements -->
  <div class="fixed inset-0 pointer-events-none overflow-hidden z-0">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-orange-500/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="w-full max-w-md relative z-10">
    <!-- Header -->
    <div class="text-center mb-8 animate-fade-in">
      <a href="<%= root_path %>" class="inline-block mb-6 hover:scale-110 transition-transform">
        <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center shadow-2xl shadow-orange-500/50">
          <i data-lucide="sparkles" class="w-8 h-8 text-white"></i>
        </div>
      </a>
      <h1 class="text-4xl font-bold font-rajdhani text-white mb-2">Sign In</h1>
      <p class="text-slate-400">Welcome back to Nexus AI</p>
    </div>

    <!-- Login Card -->
    <div class="app-card dark space-y-6 animate-scale-in">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="p-4 rounded-lg bg-red-500/10 border border-red-500/30 space-y-2">
            <p class="text-red-200 font-semibold">
              <i data-lucide="alert-circle" class="w-4 h-4 inline mr-2"></i>
              Invalid credentials
            </p>
            <p class="text-sm text-red-100/80">Please check your email and password</p>
          </div>
        <% end %>

        <!-- Email Input -->
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-semibold text-slate-200 mb-2" %>
          <%= f.email_field :email,
              required: true,
              autofocus: true,
              placeholder: "you@example.com",
              class: "input-modern dark w-full",
              autocomplete: "email" %>
        </div>

        <!-- Password Input -->
        <div>
          <%= f.label :password, "Password", class: "block text-sm font-semibold text-slate-200 mb-2" %>
          <%= f.password_field :password,
              required: true,
              placeholder: "••••••••",
              class: "input-modern dark w-full",
              autocomplete: "current-password" %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-2">
            <%= f.checkbox :remember_me, class: "w-4 h-4 accent-orange-500 cursor-pointer rounded" %>
            <%= f.label :remember_me, "Remember me for 2 weeks", class: "text-sm text-slate-300 cursor-pointer" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <%= f.button :submit, "Sign In", class: "w-full btn-primary dark py-3 font-semibold text-lg" %>
      <% end %>

      <!-- Divider -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-600/50"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-3 bg-slate-800 text-slate-400">or</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center space-y-3">
        <p class="text-sm text-slate-400">Don't have an account yet?</p>
        <%= link_to new_registration_path(resource_name), class: "btn-secondary dark w-full py-3 font-semibold" do %>
          Create Free Account
        <% end %>
      </div>

      <!-- Password Reset Link -->
      <% if devise_mapping.recoverable? %>
        <div class="text-center pt-3 border-t border-slate-600/50">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-orange-400 hover:text-orange-300 text-sm font-medium transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Back to Home Link -->
    <div class="text-center mt-6">
      <%= link_to root_path, class: "text-slate-400 hover:text-slate-300 text-sm flex items-center justify-center gap-2 transition-colors" do %>
        <i data-lucide="arrow-left" class="w-4 h-4"></i>
        Back to Home
      <% end %>
    </div>
   </div>
</div>
