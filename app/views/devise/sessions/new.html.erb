<div class="min-h-screen flex items-center justify-center px-4 bg-white" data-controller="password-toggle">
  <div class="w-full max-w-md">
    <!-- Header -->
    <div class="text-center mb-8">
      <a href="<%= root_path %>" class="inline-block mb-6 hover:opacity-70 transition-opacity">
        <div class="w-12 h-12 rounded-lg bg-neutral-100 flex items-center justify-center">
          <i data-lucide="sparkles" class="w-6 h-6 text-neutral-900"></i>
        </div>
      </a>
      <h1 class="text-3xl font-bold text-neutral-900 mb-2">Sign In</h1>
      <p class="text-neutral-600">Welcome back to Nexus AI</p>
    </div>

    <!-- Login Card -->
    <div class="border border-neutral-200 rounded-lg p-8 space-y-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="p-4 rounded-lg bg-red-50 border border-red-200 space-y-2">
            <p class="text-red-900 font-semibold">
              <i data-lucide="alert-circle" class="w-4 h-4 inline mr-2"></i>
              Invalid credentials
            </p>
            <p class="text-sm text-red-700">Please check your email and password</p>
          </div>
        <% end %>

        <!-- Email Input -->
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-semibold text-neutral-900 mb-2" %>
          <%= f.email_field :email,
              required: true,
              autofocus: true,
              placeholder: "you@example.com",
              class: "w-full px-3 py-2 border border-neutral-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-0 text-neutral-900 placeholder-neutral-400",
              autocomplete: "email" %>
        </div>

        <!-- Password Input with Toggle -->
        <div>
          <div class="flex items-center justify-between mb-2">
            <%= f.label :password, "Password", class: "block text-sm font-semibold text-neutral-900" %>
          </div>
          <div class="relative">
            <%= f.password_field :password,
                required: true,
                placeholder: "••••••••",
                class: "w-full px-3 py-2 border border-neutral-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-0 text-neutral-900 placeholder-neutral-400",
                autocomplete: "current-password",
                data: { "password-toggle-target" => "input" } %>
            <button type="button" 
                    class="absolute right-3 top-1/2 -translate-y-1/2 text-neutral-500 hover:text-neutral-700 transition-colors p-1" 
                    data-action="click->password-toggle#toggle"
                    title="Show/hide password">
              <i data-lucide="eye" class="w-4 h-4" data-password-toggle-target="eyeIcon"></i>
            </button>
          </div>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-2">
            <%= f.checkbox :remember_me, class: "w-4 h-4 rounded border-neutral-300 text-black focus:ring-2 focus:ring-black cursor-pointer" %>
            <%= f.label :remember_me, "Remember me for 2 weeks", class: "text-sm text-neutral-600 cursor-pointer" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <%= f.button :submit, "Sign In", class: "w-full bg-black text-white py-2 rounded-lg font-semibold hover:bg-neutral-800 transition-colors" %>
      <% end %>

      <!-- Divider -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-neutral-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-3 bg-white text-neutral-500">or</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center space-y-3">
        <p class="text-sm text-neutral-600">Don't have an account yet?</p>
        <%= link_to new_registration_path(resource_name), class: "block w-full px-4 py-2 border border-neutral-300 rounded-lg font-semibold text-neutral-900 hover:bg-neutral-50 transition-colors text-center" do %>
          Create Free Account
        <% end %>
      </div>

      <!-- Password Reset Link -->
      <% if devise_mapping.recoverable? %>
        <div class="text-center pt-3 border-t border-neutral-200">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-black hover:text-neutral-600 text-sm font-medium transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Back to Home Link -->
    <div class="text-center mt-6">
      <%= link_to root_path, class: "text-neutral-600 hover:text-neutral-900 text-sm flex items-center justify-center gap-2 transition-colors" do %>
        <i data-lucide="arrow-left" class="w-4 h-4"></i>
        Back to Home
      <% end %>
    </div>
   </div>
 </div>
