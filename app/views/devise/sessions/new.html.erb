<div class="min-h-screen flex items-center justify-center px-4 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">
  <!-- Decorative Background Elements -->
  <div class="fixed inset-0 pointer-events-none overflow-hidden z-0">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-orange-500/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="w-full max-w-md relative z-10">
    <!-- Header -->
    <div class="text-center mb-8 animate-fade-in">
      <a href="<%= root_path %>" class="inline-block mb-6 hover:scale-110 transition-transform">
        <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center shadow-2xl shadow-orange-500/50">
          <i data-lucide="sparkles" class="w-8 h-8 text-white"></i>
        </div>
      </a>
      <h1 class="text-4xl font-bold font-rajdhani text-white mb-2">Sign In</h1>
      <p class="text-slate-400">Welcome back to Nexus AI</p>
    </div>

    <!-- Login Card -->
    <div class="app-card dark space-y-6 animate-scale-in">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="p-4 rounded-lg bg-red-500/10 border border-red-500/30 space-y-2">
            <p class="text-red-200 font-semibold">
              <i data-lucide="alert-circle" class="w-4 h-4 inline mr-2"></i>
              Invalid credentials
            </p>
            <p class="text-sm text-red-100/80">Please check your email and password</p>
          </div>
        <% end %>

        <!-- Email Input -->
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-semibold text-slate-200 mb-2" %>
          <%= f.email_field :email,
              required: true,
              autofocus: true,
              placeholder: "you@example.com",
              class: "input-modern dark w-full",
              autocomplete: "email" %>
        </div>

        <!-- Password Input -->
        <div>
          <%= f.label :password, "Password", class: "block text-sm font-semibold text-slate-200 mb-2" %>
          <%= f.password_field :password,
              required: true,
              placeholder: "••••••••",
              class: "input-modern dark w-full",
              autocomplete: "current-password" %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-2">
            <%= f.checkbox :remember_me, class: "w-4 h-4 accent-orange-500 cursor-pointer rounded" %>
            <%= f.label :remember_me, "Remember me for 2 weeks", class: "text-sm text-slate-300 cursor-pointer" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <%= f.button :submit, "Sign In", class: "w-full btn-primary dark py-3 font-semibold text-lg" %>
      <% end %>

      <!-- Divider -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-600/50"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-3 bg-slate-800 text-slate-400">or</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center space-y-3">
        <p class="text-sm text-slate-400">Don't have an account yet?</p>
        <%= link_to new_registration_path(resource_name), class: "btn-secondary dark w-full py-3 font-semibold" do %>
          Create Free Account
        <% end %>
      </div>

      <!-- Password Reset Link -->
      <% if devise_mapping.recoverable? %>
        <div class="text-center pt-3 border-t border-slate-600/50">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-orange-400 hover:text-orange-300 text-sm font-medium transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Back to Home Link -->
    <div class="text-center mt-6">
      <%= link_to root_path, class: "text-slate-400 hover:text-slate-300 text-sm flex items-center justify-center gap-2 transition-colors" do %>
        <i data-lucide="arrow-left" class="w-4 h-4"></i>
        Back to Home
      <% end %>
    </div>
  </div>
</div>

  <div class="w-full max-w-md relative z-10">
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-block mb-6">
        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 via-orange-600 to-orange-700 rounded-2xl flex items-center justify-center shadow-lg hover:shadow-glow-lg transition-all transform hover:scale-105">
          <svg class="w-9 h-9 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
      </div>
      <h2 class="text-5xl font-bold text-gray-900 mb-3 font-rajdhani tracking-tight">Nexus AI</h2>
      <p class="text-gray-600 text-lg font-light">Unified AI Intelligence Platform</p>
    </div>

    <!-- Login Card -->
    <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 shadow-xl hover:shadow-2xl transition-shadow app-card">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <!-- Email Input -->
        <div class="mb-6">
          <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { 
                class: "input-modern w-full border-2 border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 py-3 px-4 rounded-lg text-gray-900 font-inter transition-all", 
                placeholder: "you@example.com" 
              },
              label: "Email Address",
              label_html: { class: "block text-gray-900 font-semibold mb-3 font-rajdhani text-sm uppercase tracking-wide" } %>
        </div>

        <!-- Password Input -->
        <div class="mb-6">
          <%= f.input :password,
              required: true,
              input_html: { 
                class: "input-modern w-full border-2 border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 py-3 px-4 rounded-lg text-gray-900 font-inter transition-all", 
                placeholder: "••••••••" 
              },
              label: "Password",
              label_html: { class: "block text-gray-900 font-semibold mb-3 font-rajdhani text-sm uppercase tracking-wide" } %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="mb-8 flex items-center gap-3">
            <%= f.input :remember_me, as: :boolean, 
                wrapper_html: { class: "flex items-center" },
                input_html: { class: "w-4 h-4 text-orange-600 border-2 border-gray-300 rounded-md cursor-pointer accent-orange-600" },
                label_html: { class: "text-gray-700 font-medium cursor-pointer select-none" } %>
          </div>
        <% end %>

        <!-- Sign In Button -->
        <%= f.button :submit, "Sign In", class: "w-full btn-primary py-4 mt-2 text-lg font-bold font-rajdhani tracking-wide hover:shadow-glow-lg transition-all transform hover:-translate-y-1 rounded-lg" %>

      <% end %>

      <!-- Divider -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t-2 border-gray-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-3 bg-white text-gray-500 font-medium">or</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <p class="text-gray-600 mb-4 font-inter">Don't have an account?</p>
        <%= link_to "Create Free Account", new_registration_path(resource_name), class: "btn-secondary w-full py-4 inline-flex justify-center font-bold font-rajdhani tracking-wide rounded-lg hover:border-orange-500 transition-all" %>
      </div>
    </div>

    <!-- Back Link -->
    <%= link_to "← Back Home", root_path, class: "block text-center mt-8 text-gray-600 hover:text-orange-600 font-medium transition-colors font-inter" %>
  </div>
</div>
