<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 bg-white" data-controller="password-toggle">
  <div class="w-full max-w-sm">
    <!-- Logo & Branding -->
    <div class="mb-12 text-center">
      <a href="<%= root_path %>" class="inline-flex items-center gap-2.5 hover:opacity-80 transition-opacity mb-8">
        <div class="w-10 h-10 bg-black rounded-lg flex items-center justify-center">
          <i data-lucide="sparkles" class="w-5 h-5 text-white"></i>
        </div>
        <span class="text-xl font-semibold text-neutral-900">Nexus</span>
      </a>
      
      <h1 class="text-2xl sm:text-3xl font-bold text-neutral-950 mb-2.5 tracking-tight">Welcome back</h1>
      <p class="text-sm text-neutral-600">Sign in to your account to continue</p>
    </div>

    <!-- Login Form -->
    <div class="space-y-6">
       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
         
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="p-4 rounded-xl bg-red-50 border border-red-200/50 space-y-2">
            <div class="flex items-start gap-3">
              <i data-lucide="alert-circle" class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5"></i>
              <div>
                <p class="text-sm font-semibold text-red-900">Invalid credentials</p>
                <p class="text-xs text-red-700 mt-1">Please check your email and password and try again</p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Email Input -->
        <div class="space-y-2">
          <%= f.label :email, "Email", class: "block text-sm font-medium text-neutral-700" %>
          <%= f.email_field :email,
              required: true,
              autofocus: true,
              placeholder: "you@example.com",
              class: "w-full px-4 py-2.5 bg-white border border-neutral-300 rounded-lg text-sm text-neutral-900 placeholder-neutral-500 transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-0 focus:border-transparent",
              autocomplete: "email" %>
        </div>

        <!-- Password Input with Toggle -->
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <label class="text-sm font-medium text-neutral-700">Password</label>
            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot?", new_password_path(resource_name), class: "text-xs text-neutral-600 hover:text-neutral-900 font-medium transition-colors" %>
            <% end %>
          </div>
          <div class="relative">
            <%= f.password_field :password,
                required: true,
                placeholder: "••••••••",
                class: "w-full px-4 py-2.5 pr-12 bg-white border border-neutral-300 rounded-lg text-sm text-neutral-900 placeholder-neutral-500 transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-0 focus:border-transparent",
                autocomplete: "current-password",
                data: { password_toggle_target: "input" } %>
            <button type="button" 
                    class="absolute right-4 top-1/2 -translate-y-1/2 text-neutral-400 hover:text-neutral-600 transition-colors p-1" 
                    data-action="click->password-toggle#toggle"
                    title="Show/hide password"
                    tabindex="-1">
              <i data-lucide="eye" class="w-4 h-4" data-password-toggle-target="eyeIcon"></i>
            </button>
          </div>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-3">
            <%= f.checkbox :remember_me, class: "w-4 h-4 rounded border-neutral-300 text-black focus:ring-2 focus:ring-black focus:ring-offset-1 cursor-pointer accent-black" %>
            <label class="text-sm text-neutral-700 cursor-pointer">Remember for 30 days</label>
          </div>
        <% end %>

         <!-- Submit Button -->
         <button type="submit" id="signin-btn" class="w-full bg-black text-white py-2.5 rounded-lg text-sm font-semibold hover:bg-neutral-800 active:scale-95 transition-all duration-150 flex items-center justify-center gap-2">
           <span id="signin-text">Sign in</span>
           <span id="signin-spinner" class="hidden">
             <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
               <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
               <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
             </svg>
           </span>
         </button>
      <% end %>

      <!-- Divider -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-neutral-200"></div>
        </div>
        <div class="relative flex justify-center">
          <span class="px-2 bg-white text-xs text-neutral-500 font-medium">New to Nexus?</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <%= link_to new_registration_path(resource_name), class: "w-full flex items-center justify-center gap-2 px-4 py-2.5 border border-neutral-300 rounded-lg text-sm font-medium text-neutral-900 hover:bg-neutral-50 transition-colors" do %>
        <i data-lucide="plus" class="w-4 h-4"></i>
        Create account
      <% end %>
    </div>

    <!-- Footer -->
    <div class="mt-8 pt-8 border-t border-neutral-200 text-center">
      <p class="text-xs text-neutral-600 mb-4">
        By signing in, you agree to our
        <a href="#" class="text-neutral-900 hover:underline font-medium">Terms</a> and
        <a href="#" class="text-neutral-900 hover:underline font-medium">Privacy Policy</a>
      </p>
      <%= link_to root_path, class: "inline-flex items-center gap-2 text-neutral-600 hover:text-neutral-900 text-xs font-medium transition-colors" do %>
        <i data-lucide="arrow-left" class="w-3 h-3"></i>
        Back to home
      <% end %>
    </div>
   </div>
 </div>
