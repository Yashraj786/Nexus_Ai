<div class="min-h-screen bg-gradient-to-br from-white to-gray-50 py-12 px-4">
  <div class="max-w-5xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-rajdhani font-bold text-gray-900 mb-2">Select AI Persona</h1>
      <p class="text-gray-600">Choose an AI assistant to start your conversation</p>
    </div>
    
    <% if defined?(@personas) && @personas.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @personas.each do |persona| %>
          <%= button_to chat_sessions_path(persona_id: persona.id), 
                      method: :post, 
                      class: "app-card group cursor-pointer" do %>
            <div class="flex items-start gap-3 mb-4">
              <i data-lucide="<%= persona.icon || 'bot' %>" class="w-8 h-8 text-orange-500 group-hover:text-orange-600 transition-colors"></i>
              <h3 class="text-xl font-rajdhani font-bold text-gray-900"><%= persona.name %></h3>
            </div>
            <p class="text-sm text-gray-600 line-clamp-3"><%= persona.system_instruction.truncate(100) %></p>
            <div class="mt-4 text-orange-500 font-semibold text-sm group-hover:translate-x-1 transition-transform">Start Chat â†’</div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="app-card border-2 border-red-300 bg-red-50 text-center">
        <h2 class="text-xl font-bold text-red-700 mb-2">No Personas Found</h2>
        <p class="text-red-600 mb-4">Run <code class="bg-red-100 px-2 py-1 rounded font-mono">rails db:seed</code> to create default personas</p>
        <p class="text-sm text-red-500">Personas count: <%= Persona.count %></p>
      </div>
    <% end %>
  </div>
</div>
