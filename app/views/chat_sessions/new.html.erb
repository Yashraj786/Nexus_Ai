<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-12 px-4">
  <!-- Decorative Background Elements -->
  <div class="fixed inset-0 pointer-events-none overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-orange-500/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-5xl mx-auto relative z-10">
    <div class="text-center mb-12">
      <h1 class="text-5xl font-rajdhani font-bold text-white mb-3">Select AI Persona</h1>
      <p class="text-slate-400 text-lg">Choose an AI assistant to start your conversation</p>
    </div>
    
    <% if defined?(@personas) && @personas.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @personas.each do |persona| %>
          <%= button_to chat_sessions_path(persona_id: persona.id), 
                      method: :post, 
                      class: "app-card dark group cursor-pointer hover:border-orange-500/50 transition-all duration-300 text-left" do %>
            <div class="flex items-start gap-4 mb-4">
              <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center flex-shrink-0 group-hover:shadow-lg group-hover:shadow-orange-500/30 transition-all">
                <i data-lucide="<%= persona.icon || 'bot' %>" class="w-6 h-6 text-white"></i>
              </div>
              <h3 class="text-xl font-rajdhani font-bold text-white group-hover:text-orange-400 transition-colors"><%= persona.name %></h3>
            </div>
            <p class="text-sm text-slate-300 line-clamp-3 mb-4"><%= persona.system_instruction.truncate(100) %></p>
            <div class="flex items-center text-orange-400 font-semibold text-sm group-hover:translate-x-1 transition-transform">
              <span>Start Chat</span>
              <i data-lucide="arrow-right" class="w-4 h-4 ml-2"></i>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="app-card dark border border-red-500/30 bg-red-500/10 text-center space-y-4">
        <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-red-500/20 mx-auto">
          <i data-lucide="alert-circle" class="w-6 h-6 text-red-400"></i>
        </div>
        <h2 class="text-xl font-bold text-red-300">No Personas Found</h2>
        <p class="text-red-200 mb-4">Run <code class="bg-red-900/40 px-2 py-1 rounded font-mono text-sm">rails db:seed</code> to create default personas</p>
        <p class="text-sm text-red-300/80">Personas count: <%= Persona.count %></p>
      </div>
    <% end %>
  </div>
</div>
