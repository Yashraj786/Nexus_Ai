<div class="min-h-screen lg:ml-64 bg-white flex flex-col">
  <!-- Header -->
  <header class="border-b border-neutral-200 px-4 sm:px-8 py-4 sm:py-6 bg-white sticky top-0 z-10">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <div>
        <h1 class="text-2xl sm:text-3xl font-bold text-neutral-900">Chats</h1>
      </div>
      <%= link_to new_chat_session_path, class: "flex items-center gap-2 px-4 py-2 bg-black text-white rounded hover:bg-neutral-800 transition-colors font-medium text-sm" do %>
        <i data-lucide="plus" class="w-4 h-4"></i>
        <span>New</span>
      <% end %>
    </div>
  </header>

   <!-- Content Area -->
   <main class="flex-1 overflow-y-auto px-4 sm:px-8 py-6 sm:py-8" id="chat-sessions-main" data-controller="chat-sessions-list">
     <div class="max-w-7xl mx-auto">
      <% if current_user.feature_enabled?(:pro_session_analytics) %>
        <div class="mb-8">
          <%= render "shared/onboarding_checklist" %>
        </div>
      <% end %>

      <% if @chat_sessions.any? %>
         <div class="text-sm text-neutral-500 mb-6">
           <%= @chat_sessions.count %> chat<%= 's' if @chat_sessions.count != 1 %>
         </div>

         <!-- Sessions Grid -->
         <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
           <% @chat_sessions.each do |session| %>
             <a href="<%= chat_session_path(session) %>" class="group p-4 border border-neutral-200 rounded-lg hover:border-neutral-300 hover:bg-neutral-50 transition-all cursor-pointer">
               <div class="flex items-start justify-between mb-3">
                 <div class="flex items-center gap-3 flex-1 min-w-0">
                   <div class="w-8 h-8 bg-neutral-100 rounded flex items-center justify-center flex-shrink-0">
                     <i data-lucide="<%= session.persona&.icon || 'message-circle' %>" class="w-4 h-4 text-neutral-700"></i>
                   </div>
                   <div class="min-w-0 flex-1">
                     <h3 class="font-medium text-neutral-900 truncate">
                       <%= session.title || "Untitled" %>
                     </h3>
                   </div>
                 </div>
               </div>

               <div class="text-xs text-neutral-500 space-y-1">
                 <div><%= session.persona&.name || "General" %> â€¢ <%= session.messages_count || 0 %> messages</div>
                 <div>Updated <%= time_ago_in_words(session.updated_at) %> ago</div>
               </div>
             </a>
           <% end %>
         </div>
       <% else %>
         <!-- Empty State -->
         <div class="text-center py-16">
           <div class="inline-flex items-center justify-center w-14 h-14 bg-neutral-100 rounded-full mb-4">
             <i data-lucide="message-circle" class="w-7 h-7 text-neutral-400"></i>
           </div>
           <h2 class="text-xl font-semibold text-neutral-900 mb-2">No chats yet</h2>
           <p class="text-neutral-600 mb-6">Start your first conversation with an AI assistant.</p>
           <%= link_to new_chat_session_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-black text-white rounded hover:bg-neutral-800 transition-colors font-medium text-sm" do %>
             <i data-lucide="plus" class="w-4 h-4"></i>
             Create Chat
           <% end %>
         </div>
       <% end %>
     </div>
   </main>
 </div>
