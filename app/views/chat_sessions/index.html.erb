<div class="h-full flex flex-col bg-gradient-to-b from-white to-gray-50">
  <header class="h-20 border-b border-gray-200 flex items-center justify-between px-8 bg-white">
    <div>
      <h1 class="text-2xl font-rajdhani font-bold text-gray-900">My Sessions</h1>
      <p class="text-sm text-gray-600">Your conversation history</p>
    </div>
    <%= link_to "New Session", new_chat_session_path, class: "btn-primary px-6 py-3" %>
  </header>

  <div class="flex-1 overflow-y-auto p-8">
    <% if current_user.feature_enabled?(:pro_session_analytics) %>
      <%= render "shared/onboarding_checklist" %>
    <% end %>
    <% if @chat_sessions.any? %>
      <div class="max-w-4xl mx-auto space-y-3">
        <% @chat_sessions.each do |session| %>
          <%= link_to chat_session_path(session), class: "app-card hover:-translate-y-1" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h4 class="text-base font-semibold text-gray-900 mb-1">
                  <%= session.title || "Untitled Session" %>
                </h4>
                <p class="text-sm text-gray-600">
                  <i data-lucide="<%= session.persona&.icon || 'bot' %>" class="w-4 h-4 inline mr-1 text-orange-500"></i>
                  <%= session.persona&.name || "General" %> • <%= session.messages.count %> messages
                </p>
              </div>
              <div class="text-orange-500 font-semibold text-sm">→</div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="max-w-md mx-auto text-center py-20">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-orange-100 mb-4">
          <i data-lucide="message-circle" class="w-8 h-8 text-orange-500"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">No Sessions Yet</h3>
        <p class="text-gray-600 mb-8">Start your first conversation with an AI assistant</p>
        <%= link_to "Create First Session", new_chat_session_path, class: "btn-primary px-8 py-3" %>
      </div>
    <% end %>
  </div>
</div>
