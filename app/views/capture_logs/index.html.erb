<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-6 text-white">Universal Capture Log</h1>

  <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-8 border border-gray-700">
    <h2 class="text-xl font-semibold text-white mb-4">Create New Log Entry</h2>
    <%= form_with(model: @capture_log, url: capture_logs_path, method: :post, local: true) do |form| %>
      <% if @capture_log.errors.any? %>
        <div class="bg-red-900 text-red-200 p-3 rounded-lg mb-4">
          <h3 class="font-bold">The following errors prevented the log from being saved:</h3>
          <ul>
            <% @capture_log.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, class: "block text-gray-300 text-sm font-bold mb-2" %>
        <%= form.text_field :title, class: "w-full bg-gray-700 text-white rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :content, class: "block text-gray-300 text-sm font-bold mb-2" %>
        <%= form.text_area :content, rows: 5, class: "w-full bg-gray-700 text-white rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <%= form.submit "Save Log", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg cursor-pointer transition-colors duration-200" %>
    <% end %>
  </div>

  <div class="space-y-4">
    <h2 class="text-xl font-semibold text-white mb-4">Saved Logs</h2>
    <% @capture_logs.each do |log| %>
      <div class="bg-gray-800 rounded-lg shadow p-4 border border-gray-700">
        <h3 class="font-bold text-lg text-white"><%= log.title %></h3>
        <p class="text-xs text-gray-500 mb-2">Logged on: <%= log.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
        <div class="prose prose-invert max-w-none text-gray-300">
          <%= log.content %>
        </div>
      </div>
    <% end %>
  </div>
</div>
